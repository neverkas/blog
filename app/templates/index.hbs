<div class="col s6">
	<div class="row">
	{{#each post in model}}
	<div class="card small">
	<div class="card-image waves-effect waves-block waves-light">
	  <img class="activator" src="http://materializecss.com/images/sample-1.jpg">
	</div>
	<div class="card-content">	
	  <span class="card-title activator grey-text text-darken-4">{{post.title}} <i class="mdi-navigation-more-vert right"></i></span>
	  <p><a href="#">{{post.description}}</a></p>
	</div>
	<div class="card-reveal">
	  <span class="card-title grey-text text-darken-4">Card Title <i class="mdi-navigation-close right"></i></span>
	  <p>Here is some more information about this product that is only revealed once clicked on.</p>
	</div>
	</div>
	{{/each}}
	</div>
</div>

{{outlet}}
